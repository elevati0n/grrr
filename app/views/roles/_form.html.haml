= form_for @role, :html => { :class => 'form-horizontal form-model' } do |f|
  .form-group
    = f.label :powers, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_area :powers, :class => 'text-field form-control'
  .form-group
    = f.label :meta, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_area :meta, :class => 'text-field form-control'
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")),
        roles_path, :class => 'btn btn-default'
