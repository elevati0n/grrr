<%= simple_form_for(@content) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :body %>
    <%= f.association :post %>
    <%= f.association :presenter %>
    <%= f.association :friendship %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
