.container-fluid
  .parallax-container
    .parallax
      = image_tag image_url 'https://i.ytimg.com/vi/7oYOVsUaLOs/maxresdefault.jpg'

.container-fluid.cats
  .well-lg
    .row
      .img-responsive.col-md-3.col-xs-8.pull-left.pusheen= image_tag 'catgif.gif'
      .col-md-6.col-xs-8.overlay-grrr= image_tag 'entropy.png'
      .img-responsive.col-md-3.col-xs-8.pull-right.pusheen= image_tag 'angrycat.png'
      .text-center.thinking-man= image_tag 'thinkingman.png'

      %h1.col-xs-10.pull-right.citylights.mdl-typography--text-center.text-center.rawr RAWR xD

.container.start-content.fire-text
  .row.mdl-shadow--24dp
    %h1.fire-text <3 <3
    = icon :heart

.container-fluid.gradient
  .row
    .card.mdl-shadow--24dp
      = panel
      .panel-heading
        "welcome to grrr"
      .panel-footer
        = icon 'glyphicon glyphicon-map-marker'
  = panel_row column_class: 'col-md-3 card list-group' do
    = panel 'menu' do
      = button 'Menu', '#'
    = panel do
      = button 'Menu1'
    = panel do
      = button 'Menu3'
    = panel do
      = dropdown 'Menu4' do
        = link_to 'home', '#'
        = link_to 'home', '#'
        = link_to 'home', '#'
  %br
  %br

  %br
  .row
    .col-xs-12
      .row.list-group
        %hr
        .col-md-10.col-md-offset-1
        %hr
          .col-sm-offset-2.col-md-6
            %hr
            .card
              %h4 progress bar
              = icon 'glyphicon glyphicon-flag'
              = progress_bar [{percentage: 40, context: :success},
                              {percentage: 30, context: :warning},
                              {percentage: 15, context: :danger}]
            %hr


.card.retro.panel-primary.mdl-shadow--24dp.gradient
  = panel_row column_class: 'card-panel panel-info' do
    .col-md-4.pull-left= panel "#1"
    .col-md-4.pull-left= panel "#2"
    .col-md-4.pull-right= panel "#3"
  %hr
  = panel do
    .row
      .col-md-10.col-md-offset-1
        %hr
        = panel do
          .row
            .col-sm-offset-4.col-md-4
              %h3.centered-text.elegant-shadow hi there and welcome to grrr


