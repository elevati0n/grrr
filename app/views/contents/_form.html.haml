= form_for @content, :html => { :class => 'form-horizontal form-model' } do |f|
  .form-group
    = f.label :body, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_area :body, :class => 'text-field form-control'
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        contents_path, :class => 'btn btn-default'                   |
