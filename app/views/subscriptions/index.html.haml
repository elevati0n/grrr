- model_class = Subscription
.page-header
  %h1= t '.title', :default => Subscription
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @subscriptions.each do |subscription|
      %tr
        %td= subscription.id
        %td= l subscription.created_at, format: :long
        %td
          = link_to subscription_path(subscription), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do
            = glyph 'info-sign'
            = glyph 'pencil'
          = link_to subscription_path(subscription), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do
            = glyph 'remove'
= link_to t('.new', :default => t("helpers.links.new")), |
  new_subscription_path,                                 |
  :class => 'btn btn-primary'                            |
